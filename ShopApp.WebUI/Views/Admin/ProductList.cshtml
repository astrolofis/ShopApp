@model ProductListModel

<h1>Admin Ürünler</h1>



@if (Model.Products.Count()>0)
{
    <table class="table table-bordered">
        <thead></thead>
        <tr>
            <td style="width:30px">Id</td>
            <td style="width:100px">Resim</td>
            <td >İsim</td>
            <td style="width:12px">Fiyat</td>
            <td style="width:150px"></td>
        </tr>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        <img src="~/img/@item.ImageUrl" width="80" />
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>
                        <a class="btn btn-primary btn-sm mr-2" href="/admin/products/@item.Id">Düzenle</a>
                        
                        <form action="/admin/deleteproduct" method="post"vstyle="display:inline">
                            <input type="hidden" name="productId" value="@item.Id"/>
                            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                        </form>
                        

                    </td>
                </tr>
            }

        </tbody>

    </table>
}
else
{
    <div class="alert alert-warning">
        <h4>Ürün Bulunamadı</h4>
    </div>
}
